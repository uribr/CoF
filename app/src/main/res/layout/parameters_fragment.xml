        android:id="@+id/settings_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/preset_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/preference_height"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onSettingClick"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/params_preset_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/preference_text_size"
                android:textStyle="bold"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/current_preset_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/default_preset_name"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/preference_text_size"/>

        </LinearLayout>

        <View
