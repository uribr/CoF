<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Switch
        android:id="@+id/scribble_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:checked="false"
        android:onClick="onScribbleOn"
        android:splitTrack="false"
        android:text="@string/Scribble"
        android:textIsSelectable="false"
        android:textSize="12sp"
        android:thumbTint="@android:color/holo_purple"
        android:trackTint="@android:color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="false"/>

    <Button
        android:id="@+id/apply_filter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onChangeParameters"
        android:text="@string/parameters_input"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/help_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onHelpClick"
        android:text="@string/help_button_text"
        android:textAllCaps="false"/>


</LinearLayout>